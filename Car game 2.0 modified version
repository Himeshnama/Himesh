# Car game 2.0 modified version


print( 'welcome to car game 2.0 in this game the gole is not to crash into anything and survive. \n type "help" to know the functionspresent in the game and type start to start the game \n hope you will have a good time playing this game . \n you may procede in playing the . "thank you"' )
command = ""
started = False
left = True
right = True
center = False
boost = False
over_heated = False
brake = False
while True:
    command = input("> ").lower()
    if command == "start":
        if started:
            print("car is already started!")
        else:
            started = True
            print("car started ...")
    elif command == "stop":
        if not started:
            print("car is already stopped!")
        else:
            started = False
            print("car stopped.")
    elif command == "left":
        if not started:
            print("hey! , you\'r car has still not started yet")
            continue
        if left is False:
            print("sorry you\'r car has crashed and went out of boundery .\n game over")
            break
        elif center is False:
            print("car has turned left.")
            right = True
            left = False
            center = True
        else:
            print("car has turned left.")
            right = True
            left = True
            center = False
    elif command == "right":
        if not started:
            print("hey! , you\'r car has still not started yet")
            continue
        if right is False:
            print("sorry you\'r car has crashed and went out of boundery .\n game over")
            break
        elif center is False:
            print("car has turned right.")
            right = False
            left = True
            center = True
        else:
            print("car has turned right.")
            right = True
            left = True
            center = False
    elif command == 'boost':
        if not started:
            print("hey! , you\'r car has still not started yet")
            continue
        if boost is True and over_heated is True:
            print('you\'r car engine has over heated and the tires have skidded .\n you have crashed into a unknown object. \n game over' )
            break
        elif boost is True and over_heated is False:
            print('you better slow down or you\'r car will get damaged')
            over_heated = True
        else:
            print('you\'r car has been boosted and has aquired 20 % more speed')
            boost = True
    elif command == 'brake':
        if not started:
            print("hey! , you\'r car has still not started yet")
            continue
        if brake is True:
            print('you\'r car has already been slowed down! ')
        else:
            print('you\'r car has slowed down ')
            brake = True
            over_heated = False
            boost = False
    elif command == "help":
        print("""
start - to start the car
stop - to stop the car
left - to turn left
right - to turn right
boost - to boost you\'r car
breaks - to slow down you\'r car
quit - to quit
        """)
    elif command == "quit":
        break
    else:
        print("sorry, I don't understand that!")
print("thank you")
